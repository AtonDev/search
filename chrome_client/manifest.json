{
  "manifest_version": 2,

  "name": "Instant Search",
  "description": "This extension allows you to uniquely search the web.",
  "version": "0.1",

  "permissions": [
     "http://*/*",
     "https://*/*",
     "tabs",
     "activeTab"
  ],
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"]
    }
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "icon.png"
  },

  "web_accessible_resources": [
    "css/*.css",
    "toolbar.html",
    "toolbarInitial.html"
  ]
}
